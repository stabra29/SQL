--display highest rating to lowest.
SELECT * FROM favorite_books 
ORDER BY rating DESC;

-- display rating greater than 4.5.
SELECT * FROM favorite_books 
WHERE rating > 4.5;

--display average rating.
SELECT AVG(rating) 
FROM favorite_books;
